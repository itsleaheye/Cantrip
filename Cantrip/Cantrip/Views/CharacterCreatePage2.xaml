                                FontAttributes="Bold"
                                FontSize="24"
                                TextColor="#202328"
                                BackgroundColor="#53565D"
                                CornerRadius="8"
                                Padding="0"
                                HeightRequest="24"
                                WidthRequest="24"
                                Margin="-40,0,10,0"/>
