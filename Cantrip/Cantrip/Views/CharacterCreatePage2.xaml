                                BackgroundColor="#53565D"
                                CornerRadius="8"
                                Padding="0"
                                HeightRequest="24"
                                WidthRequest="24"
                                Margin="-40,0,10,0"/>
                        <Label x:Name="dexVal"
                               Text="8"
                               TextColor="#ffffff"
                               FontSize="20"
                               HorizontalOptions="End"
                               HorizontalTextAlignment="Center"
                               FontFamily="Open Sans"
                               Margin="0,0,10,0"
                               VerticalOptions="Center"
                               WidthRequest="30"/>
                        <Button   x:Name="dexDec"
                            ClassId="BtnDexDec"
                                Clicked="BtnDecreased_Clicked"
                                IsVisible="true"
