                <Frame BackgroundColor="#202328"
                       Margin="0,6,0,6"
                       HeightRequest="51"
                       HorizontalOptions="FillAndExpand"
                       WidthRequest="300"
                       Padding="25,-10,25,7">
                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="Center"
                                 HeightRequest="35">
                        <Label Text="Wisdom"
                                TextColor="#ffffff"
                                FontSize="20"
                                HorizontalOptions="Start"
                                FontFamily="Open Sans"
                                WidthRequest="280"
                                VerticalOptions="Center"/>
                        <Button  x:Name="wisInc"
                            ClassId="BtnWisInc"
