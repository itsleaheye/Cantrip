                                TextColor="#202328"
                                BackgroundColor="#53565D"
                                CornerRadius="8"
                                Padding="0"
                                HeightRequest="24"
                                WidthRequest="24"
                                Margin="0,0,0,0"/>
                    </StackLayout>
                </Frame>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center">
                <Button Text="Roll Points"
                        Clicked="BtnRoll_Clicked"
                        BackgroundColor="#202328"
                        TextColor="#42C9C5"
                        BorderColor="#42C9C5"
                        BorderWidth="3"
                        FontSize="20"
                        Padding="15"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Margin="15,15,10,0"
                        HeightRequest="56"
                        WidthRequest="170"/>
                <Button Text="Buy Points"
                        Clicked="BtnBuy_Clicked"
                        BackgroundColor="#202328"
                        TextColor="#42C9C5"
                        BorderColor="#42C9C5"
                        BorderWidth="3"
                        FontSize="20"
                        Padding="15"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Margin="0,15,15,0"
                        HeightRequest="56"
                        WidthRequest="170"/>
                </StackLayout>
                <Button Text="NEXT"
                        Clicked="Button_Clicked"
                        BackgroundColor="#5bc9cd"
                        TextColor="#202328"
                        FontSize="20"
                        Padding="15"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Margin="15,9,15,15"
                        HeightRequest="56"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
