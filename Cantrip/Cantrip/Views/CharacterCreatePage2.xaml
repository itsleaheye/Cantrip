                               Text="8"
                               TextColor="#ffffff"
                               FontSize="20"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               FontFamily="Open Sans"
                               Margin="0,0,10,0"
                               VerticalOptions="Center"
                               WidthRequest="30"/>
                        <Button   x:Name="wisDec"
                            ClassId="BtnWisDec"
                                Clicked="BtnDecreased_Clicked"
                                IsVisible="true"
                                Text="-"
