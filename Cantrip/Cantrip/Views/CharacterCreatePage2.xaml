                       WidthRequest="300"
                       Padding="25,-10,25,7">
                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="Center"
                                 HeightRequest="35">
                        <Label Text="Strength"
                                TextColor="#ffffff"
                                FontSize="20"
                                HorizontalOptions="Start"
                                FontFamily="Open Sans"
                                WidthRequest="280"
                               VerticalOptions="Center"/>
                        <Button   x:Name="strInc"
