                                Margin="-40,0,10,0"/>
                        <Label x:Name="strVal"
                               Text="8"
                               TextColor="#ffffff"
                               FontSize="20"
                               HorizontalOptions="End"
                               HorizontalTextAlignment="Center"
                               FontFamily="Open Sans"
                               Margin="0,0,10,0"
                               VerticalOptions="Center"
                               WidthRequest="30"/>
                        <Button   x:Name="strDec"
